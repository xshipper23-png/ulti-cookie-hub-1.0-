-- INFO-TEXTE FÜR DIE NOTES (Hier kannst du Werbung machen!)
local Notes = {
    ["NORMAL"] = "free for all\basics funktion\bad version of main funktions\\",
    
    ["VERSION +"] = "advances system\more funktions\better working\up to date\need key aces",
    
    ["PREMIUM"] = "advances system\more funktions\kill all anti cheat bypass\working perfect\always up to date\need key acces"
}

-- [[ GUI CODE ]] --
local ScreenGui = Instance.new("ScreenGui")
local MainFrame = Instance.new("Frame")
local TitleLabel = Instance.new("TextLabel")
local StartBtn = Instance.new("TextButton")
local ButtonHolder = Instance.new("Frame")
local UIListLayout = Instance.new("UIListLayout")
local NoteFrame = Instance.new("Frame")
local NoteLabel = Instance.new("TextLabel")
local NoteTitle = Instance.new("TextLabel")

ScreenGui.Parent = game.CoreGui
ScreenGui.Name = "CustomHubV2"

-- Hauptfenster (Breiter gemacht für Notes)
MainFrame.Name = "MainFrame"
MainFrame.Parent = ScreenGui
MainFrame.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
MainFrame.Position = UDim2.new(0.5, -225, 0.5, -150)
MainFrame.Size = UDim2.new(0, 450, 0, 320) -- Breite von 250 auf 450 erhöht
MainFrame.Active = true
MainFrame.Draggable = true
Instance.new("UICorner", MainFrame).CornerRadius = UDim.new(0, 10)

-- Titel
TitleLabel.Parent = MainFrame
TitleLabel.Size = UDim2.new(1, 0, 0, 50)
TitleLabel.BackgroundTransparency = 1
TitleLabel.Text = HubName
TitleLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
TitleLabel.TextSize = 22
TitleLabel.Font = Enum.Font.GothamBold

-- Button Halter (Links)
ButtonHolder.Parent = MainFrame
ButtonHolder.Size = UDim2.new(0, 180, 0, 180)
ButtonHolder.Position = UDim2.new(0, 15, 0, 60)
ButtonHolder.BackgroundTransparency = 1

UIListLayout.Parent = ButtonHolder
UIListLayout.Padding = UDim.new(0, 10)

-- Note Frame (Rechts)
NoteFrame.Parent = MainFrame
NoteFrame.Size = UDim2.new(0, 225, 0, 180)
NoteFrame.Position = UDim2.new(0, 210, 0, 60)
NoteFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
Instance.new("UICorner", NoteFrame)

NoteTitle.Parent = NoteFrame
NoteTitle.Size = UDim2.new(1, 0, 0, 30)
NoteTitle.Text = "FEATURES / INFO"
NoteTitle.TextColor3 = Color3.fromRGB(150, 150, 150)
NoteTitle.TextSize = 14
NoteTitle.Font = Enum.Font.GothamBold
NoteTitle.BackgroundTransparency = 1

NoteLabel.Parent = NoteFrame
NoteLabel.Size = UDim2.new(1, -20, 1, -40)
NoteLabel.Position = UDim2.new(0, 10, 0, 35)
NoteLabel.Text = "Wähle ein Tier aus, um die Features zu sehen..."
NoteLabel.TextColor3 = Color3.fromRGB(200, 200, 200)
NoteLabel.TextSize = 14
NoteLabel.Font = Enum.Font.Gotham
NoteLabel.TextWrapped = true
NoteLabel.TextYAlignment = Enum.TextYAlignment.Top
NoteLabel.TextXAlignment = Enum.TextXAlignment.Left
NoteLabel.BackgroundTransparency = 1

local selectedTier = "None"

-- Funktion zum Erstellen der Tier-Buttons
local function CreateTierButton(name, color)
    local btn = Instance.new("TextButton")
    btn.Name = name .. "Btn"
    btn.Parent = ButtonHolder
    btn.Size = UDim2.new(1, 0, 0, 45)
    btn.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
    btn.Text = name
    btn.TextColor3 = color
    btn.Font = Enum.Font.GothamSemibold
    btn.TextSize = 14
    Instance.new("UICorner", btn)
    
    local stroke = Instance.new("UIStroke", btn)
    stroke.Thickness = 2
    stroke.Color = Color3.fromRGB(0, 255, 120)
    stroke.Enabled = false
    
    btn.MouseButton1Click:Connect(function()
        selectedTier = name
        
        -- Update Info Text
        NoteLabel.Text = Notes[name]
        NoteTitle.Text = name .. " INFO"
        NoteTitle.TextColor3 = color
        
        -- Rahmen Logik
        for _, child in pairs(ButtonHolder:GetChildren()) do
            if child:IsA("TextButton") and child:FindFirstChild("UIStroke") then
                child.UIStroke.Enabled = false
            end
        end
        stroke.Enabled = true
    end)
    
    return btn
end

local NormalBtn = CreateTierButton("NORMAL", Color3.fromRGB(200, 200, 200))
local VersionPlusBtn = CreateTierButton("VERSION +", Color3.fromRGB(0, 170, 255))
local PremiumBtn = CreateTierButton("PREMIUM", Color3.fromRGB(255, 215, 0))

-- Start Button
StartBtn.Parent = MainFrame
StartBtn.Size = UDim2.new(1, -30, 0, 50)
StartBtn.Position = UDim2.new(0, 15, 1, -65)
StartBtn.BackgroundColor3 = Color3.fromRGB(0, 180, 80)
StartBtn.Text = "START SELECTED TIER"
StartBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
StartBtn.Font = Enum.Font.GothamBold
StartBtn.TextSize = 16
Instance.new("UICorner", StartBtn)

-- Execution
StartBtn.MouseButton1Click:Connect(function()
    if selectedTier == "NORMAL" then
        ExecuteNormal()
        ScreenGui:Destroy()
    elseif selectedTier == "VERSION +" then
        ExecuteVersionPlus()
        ScreenGui:Destroy()
    elseif selectedTier == "PREMIUM" then
        ExecutePremium()
        ScreenGui:Destroy()
    else
        StartBtn.Text = "BITTE TIER WÄHLEN!"
        task.wait(1.5)
        StartBtn.Text = "START SELECTED TIER"
    end
end)
